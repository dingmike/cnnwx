        <canvas canvasId="myCanvas" class="myCanvas" style="width: {{phoneWidth}}px; height: {{phoneHeight}}px;"></canvas>
    </view>
    <view class="Achievementsbtn">
        <view bindtap="shareImg" class="shareImg">
            <image src="/static/image/icon/share.png"></image>
        </view>
        <view bindtap="extendRead" class="shareImg">
