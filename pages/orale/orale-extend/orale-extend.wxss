.today-content-sound {
    border: 1px solid #c0c0bf;
    width: 90%;
    margin-left: 5%;
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
    border-radius: 20px 20px 20px 20px;
    height: 80rpx;
    vertical-align: middle;
}

.today-sound {
    align-content: center;
    margin-top: 20rpx;
}

.today-sound-control image {
    width: 70rpx;
    height: 70rpx;
    vertical-align: middle;
    margin-top: 5rpx;
    margin-left: 10rpx;
}

.today-sound-time {
    font-size: 13px;
    line-height: 80rpx;
    margin-right: 20rpx;
}

.today-sound-process {
    width: 90%;
    margin-left: 10rpx;
}

.today-content-jp {
    font-size:14px;
    margin-top:20rpx;

}

.today-content-ch {
    font-size: 14px;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    color: black;
}

