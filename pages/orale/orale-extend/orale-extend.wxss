page {
    background-color: #fff;
}

.sceneImg image {
    width: 100%;
    height: 300rpx;
}

.classbtn {
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    background-color: #58b406;
    color: #fff;
    text-align: center;
    font-size: 15px;
    line-height: 100rpx;
}

.today-content {
    width: 90%;
    margin-left: 5%;
    background-color: #fff;
    height: 85%;
    position: absolute;
    border-radius: 5px 5px 5px 5px;
    vertical-align: middle;
}

.today-content-title {
    font-weight: bold;
    text-align: center;
    padding: 40rpx 0 20rpx 0;
    font-size: 15px;
}

.text-height {
    height:65%;
    padding-bottom:100rpx;
    line-height:2;
}

/*.top {
