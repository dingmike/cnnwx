.slogan {
    padding: 40rpx 40rpx 0 40rpx;
    font-size: 30rpx;
    color: #fff;
}

.slogan2 {
    padding: 20rpx 40rpx 0 40rpx;
    font-size: 26rpx;
    color: #fff;
}

.category {
    padding: 0 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 80rpx;
    border-bottom: 0.5rpx solid #efefef;
    color: #333;
}

.category-title {
    font-weight: bold;
}

.news-item {
    height:224rpx;
    display: flex;
    flex-direction: row;
    padding: 20rpx 30rpx;
}

.news-item-border {
    border-bottom: 0.5rpx solid #efefef;
}

.item-left {
    flex: 2;
    position: relative;
}

.title {
    font-size: 28rpx;
    line-height: 44rpx;
    color: #333;
    width: 100%;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.descript {
    font-size: 22rpx;
    line-height: 34rpx;
    color: #999;
    width: 100%;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.item-right {
    padding-left: 20rpx;
    flex: 1;
}

.item-right-img {
    border-radius: 10rpx;
    width: 100%;
    height: 100%;
}

.item-right-img-inner {
    border-radius: 10rpx;
    width: 100%;
    height: 100%;
}