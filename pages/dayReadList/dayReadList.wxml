<view class="spbg">
    <block wx:if="{{showSlogan}}">
        <view class="slogan">{{slogan.english}}</view>
        <view class="slogan2">{{slogan.chinese}}</view>
    </block>
</view>
<tools bind:hideBg="cancelcanvaspic" class="toolswrap">
    <button bindgetuserinfo="getUserInfo" class="toolssign" openType="getUserInfo" wx:if="{{!showbg}}"></button>
    <button bindtap="savecanvaspic" class="toolssave" wx:else></button>
</tools>
<view class="sharebg" style="display:{{showbg?'block':'none'}}"></view>
<view capture-catch:touchmove="cancelmove" class="canswrap" style="display:{{showbg?'block':'none'}}">
    <canvas canvasId="sharepage" class="sharepage" style="border-radius: 20px;width:{{canvasWidth}}px; height:{{canvasHeight}}px;"></canvas>
</view>
<view class="wrap">
    <view class="main">
        <view class="section" wx:for="{{newsList}}" wx:key="{{item.category}}">
            <view class="category">
                <text class="category-title">{{item.category}}</text>
            </view>
            <view bindtap="detailPage" data-value="{{cell.pageId}}" wx:for="{{item.newsList}}" wx:for-item="cell" wx:key="{{cell.pageId}}">
                <form-push bindformpush="push">
                    <view class="news-item {{index!=item.newsList.length-1?'news-item-border':''}}">
                        <view class="item-left">
                            <view class="title">{{cell.title}}</view>
                            <view class="descript">{{cell.descript}}</view>
                        </view>
                        <view class="item-right">
                            <view class="item-right-img">
                                <image class="item-right-img-inner" mode="aspectFill" src="{{cell.imgurl}}"></image>
                            </view>
                        </view>
                    </view>
                </form-push>
            </view>
        </view>
    </view>
</view>
