.detail {
    padding: 20rpx 30rpx 10rpx 30rpx;
    align-items: center;
    border-bottom: 0.5rpx solid #efefef;
    color: #333;
}

.detail-audio {
    width: 100%;
}

.detail-newaudio {
    height: 0;
    width: 0;
    display: block;
}

.detail-title {
    font-size: 40rpx;
    font-weight: bold;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.detail-content {
    width: 100%;
    align-items: center;
    justify-content: center;
    word-wrap: break-word;
    font-size: 32rpx;
    color: #666;
    margin-bottom: 40rpx;
    padding: 0rpx 0 30rpx 0;
}

.detail-text {
    text-indent: 16%;
    width: 90%;
    margin: 0 auto;
    padding: 10rpx 0;
}

.detail-cite {
    font-size: 22rpx;
    color: #999;
    font-style: italic;
}

.detail-media {
    width: 90%;
    margin: 0 auto;
    padding: 10rpx 0;
}

.detail-image {
    width: 100%;
    display: block;
    margin: 0 auto;
}

.detail-published {
    padding-top: 20rpx;
    font-size: 20rpx;
    color: #999;
    text-align: right;
}

.detail-trans {
    position: relative;
}

.detail-translate-wrap {
    position: absolute;
    top: 14rpx;
    left: 5%;
}

.detail-translate {
    border: 1rpx solid #6666FF;
    border-radius: 10rpx;
    padding: 10rpx 12rpx;
    font-size: 20rpx;
    color: #6666FF;
    height: 20rpx;
    line-height: 20rpx;
}

.detail-voice-wrap {
    position: absolute;
    top: 14rpx;
    left: 13%;
}

.detail-voice {
    border: 1rpx solid #6666FF;
    border-radius: 10rpx;
    padding: 10rpx 12rpx;
    font-size: 20rpx;
    color: #6666FF;
    height: 20rpx;
    line-height: 20rpx;
}

.detail-chinese {
    display: -webkit-box;
    box-sizing: border-box;
    width: 90%;
    padding: 5rpx 10rpx;
    margin: 0 auto;
    font-size: 20rpx;
    border: 1rpx dotted #999;
    text-indent: 1.4rem;
    line-height: 34rpx;
    background: #efefef;
    margin-bottom: 24rpx;
}